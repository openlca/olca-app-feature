html, body, #container
	width 100%
	height 100%
	min-width 540px
	margin 0
	padding 0

.clear
	clear both

.plugin-container
	min-height 160px
	width auto
	padding 0 20px
	
	&:not(:first-of-type)
		border-top 1px solid rgb(224, 224, 224)
		
	h3
		margin-top 0

	.btn
		margin-bottom 5px
		width 130px
		position absolute
		right 0

.status-info
	position absolute
	right 10px
	width 110px
	color #d9534f
	margin-top 39px

.left, .center, .right
	margin 20px 0
	float left	

.left
	width 15%
	
	& > *
		float left

.center
	width 60%

.right
	margin-left 1%
	width 24%
	position relative

	& > *
		float right

.bold
	font-weight bold

.logo 
	height 64px
	width 64px
	border 1px solid rgb(224, 224, 224)
	border-radius 5px

.default-logo
	background #ffffff url('data:image/png;base64,') repeat-x bottom

.glyphicon-ok
	margin-left 15px

.glyphicon-green
	color #5cb85c

.glyphicon-white
	color #ffffff

.btn-install
	&, &.active, &.focus, &:active, &:focus, &:hover
		color #5cb85c

.btn-update
	&, &.active, &.focus, &:active, &:focus, &:hover
		color #ec971f

.btn-uninstall
	&, &.active, &.focus, &:active, &:focus, &:hover
		color #d9534f

	&.updateable
		top 39px